<div class="container text-center margin-tb">
  <div class="row entry-form-c">
    <h2>管理者登録（基本使わん）</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <div class="col-xs-3 margin20">
            <%= f.label :name %>
          </div>
          <div class="col-xs-9 margin20">
            <%= f.email_field :name, autofocus: true, autocomplete: "email", size: 25 %>
          </div>
        </div>
        <div class="field">
          <div class="col-xs-3 margin20">
            <%= f.label :email %>
          </div>
          <div class="col-xs-9 margin20">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 25 %>
          </div>
        </div>
        <div class="field">
          <div class="col-xs-3">
            <%= f.label :password %>
          </div>
          <div class="col-xs-9 margin20">
            <%= f.password_field :password, autocomplete: "current-password", size: 25 %>
          </div>
        </div>
      
        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>
  </div>
</div>