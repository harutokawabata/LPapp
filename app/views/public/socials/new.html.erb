<div class="container text-center">
    <div class="row entry-form-c">
      <h3>SNS登録</h3>
      <p><%= current_user.name %>さんのSNSを登録しよう♪</p>
      <%= form_with model: @social, url: public_socials_path, local:true do |f| %>
      <%# f.select :type, Social.types_i18n.invert, {prompt: false}, class:"form-control form-control-sm col-6"  %>
      <div class="col-xs-3 margin20">
         <%= f.label :url %>
      </div>
      <div class="col-xs-9 margin20">
         <%= f.text_field :url %>
      </div>
      <div class="col-xs-3 margin20">
         <%= f.label :SNStype %>
      </div>
      <div class="col-xs-9 margin20">
        <%= f.select :snstype, Social.snstypes.map { |k, v| [I18n.t("enums.social.snstype.#{k}"), k]} %>
      </div>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <%= f.submit "登録する" %>
      <% end %>
    </div>
</div>