<div class="container text-center margin-tb">
  <div class="row entry-form-c">
    <h3>会員登録.</h3>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
    
      <div class="field">
        <div class="col-xs-3 margin20">
          <%= f.label :name %>
        </div>
        <div class="col-xs-9 margin20">
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"名前" %>
        </div>
      </div>
      <div class="field">
        <div class="col-xs-3 margin20">
          <%= f.label :email %>
        </div>
        <div class="col-xs-9 margin20">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>
    
      <div class="field">
        <div class="col-xs-3 margin20">
          <%= f.label :password %>
        </div>
        <div class="col-xs-9 margin20">
          <%= f.password_field :password, autocomplete: "new-password" %><br>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
      </div>
      <div class="field">
        <div class="col-xs-3 margin20">
          <%= f.label :確認 %>
        </div>
        <div class="col-xs-9 margin20">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>
    
      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
    <%= render "users/shared/links" %>
  </div>
</div>
    
