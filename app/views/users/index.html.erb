<div class="container user">
    <div class="row users-area no-gutters">
      <h2 style="font-size:24px;">ユーザー一覧</h2>
      <div class="row users-header no-gutters">
        <div class="col-xs-7">【name】</div>
        <!--<div class="col-xs-">【introduction】</div>-->
        <div class="col-xs-5">【sns】</div>
      </div>
      <% a = 0 %>
      <% @users.each do |user| %>
      <div class="row no-gutters user-inners">
        <div class="col-xs-7  text-left">
          【<%= a += 1 %>】<%= link_to user.name, user_path(user.id) %>
        </div>
        <!--<div class="col-xs-5">-->
           <%# user.introduction.truncate(20)  %>
        <!--</div>-->
        <div class="col-xs-5">
           <% user.socials.each do |social| %>
              <% if social.snstype["twitter"].present? %>
                <%= link_to social.url do %>
                  <i class="fab fa-twitter-square"></i>
                <% end %>
              <% end %>
              <% if social.snstype["blog"].present? %>
                <%= link_to social.url do %>
                  <i class="fab fa-youtube"></i>
                <% end %>
              <% end %>
              <% if social.snstype["instagram"].present? %>
                <%= link_to social.url do %>
                  <i class="fab fa-instagram-square"></i>
                <% end %>
              <% end %>
              <% if social.snstype["line"].present? %>
                <%= link_to social.url do %>
                  <i class="fab fa-line"></i>
                <% end %>
              <% end %>
              <% if social.snstype["facebook"].present? %>
                <%= link_to social.url do %>
                  <i class="fab fa-facebook"></i>
                <% end %>
              <% end %>
            <% end %>
            <br>
            <% if current_user.id == user.id %>
              <%= link_to 'SNS追加', new_public_social_path %>
            <% end %>
        </div>
      </div>
      <% end %>
    </div>
